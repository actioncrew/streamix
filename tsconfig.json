/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "noUnusedLocals": true,     // Warns about unused local variables
    "noUnusedParameters": true,  // Warns about unused function parameters
    "lib": [
      "ES2022",
      "dom"
    ],
    "paths": {
      "@actioncrew/streamix": [
        "./projects/streamix/src/public-api.ts",
        "./dist/streamix/index.d.ts"
      ],
      "@streamix/angular": [
        "./dist/angular/index.d.ts"
      ],
      "@actioncrew/streamix/http": [
        "./projects/streamix/http/src/public-api.ts",
        "./dist/streamix/http/index.d.ts"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
